<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingTop="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_shadow"
        android:orientation="horizontal">

        <View
            android:id="@+id/avaliacao_color_indicator"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#148cb7"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/avaliacao_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#339966"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/avaliacao_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:textColor="#464646"
                android:textSize="10sp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:text="@string/words_grade"
                    android:textSize="14sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#2f755b"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/avaliacao_nota"
                    android:gravity="center_vertical"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avaliacao_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right|end"
                android:layout_margin="3dp"
                android:adjustViewBounds="false"
                android:background="@drawable/delete"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/avaliacao_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right|end"
                android:layout_margin="3dp"
                android:adjustViewBounds="false"
                android:background="@drawable/edit"
                android:padding="3dp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>